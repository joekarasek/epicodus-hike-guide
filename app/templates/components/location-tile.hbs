<div class="gmaps">
  <br><br>
  {{#g-map lat=place.lat lng=place.lon zoom=12 as |context|}}
    {{#g-map-marker context lat=place.lat lng=place.lon as |markerContext|}}
      {{#g-map-infowindow markerContext openOn="mouseover"}}
        <h2><a href="https://maps.google.com?saddr=Current+Location&daddr={{place.lat}},{{place.lon}}"> Directions to {{place.name}}</a></h2>
      {{/g-map-infowindow}}
    {{/g-map-marker}}
  {{/g-map}}
</div>
